<%= render 'devise/shared/header' %>

<div class="login-body">
  <div class="title">
    Login
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-body"}) do |f| %>
    <div class="form-parts">
      <span class="label">Email</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fields" %>
    </div>

    <div class="form-parts">
      <span class="label">Password</span>
      <%= f.password_field :password, autocomplete: "current-password", class: "fields"  %>
    </div>

    <div class="form-parts actions">
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.check_box :remember_me, class: "label checkbox" %>
          <span class ="label checkbox">Remember me</span>
        </div>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
    
    <div class="form-button">
      <%= f.submit "Log in", class: "button" %>
    </div>
  <% end %>

  <div class="links">
    <span class="text">Don't have an account yet?</span>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    <% end %>
  </div>
</div>
