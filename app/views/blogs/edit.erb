<h1> Edit blog </h1>

<%= render 'layouts/username', user: @user%>

<%= form_with model: @blog, url: user_blog_path(@user, @blog), local: true do |f| %>
 <%= render 'devise/shared/error_general', resource: @blog %>
  <div>
    <strong>Title: </strong>
    <%= f.text_field :title %>
  </div>
  <br>
   <div>
    <strong>Content: </strong>
    <%= f.text_area :content_text %>
  </div>
  <br>
  <%= f.submit%>
<% end %>

<p>
  <%= link_to  "Back", user_blog_path(@user, @blog) %>
  <%= link_to  "List of Blogs", user_path(@user)%>
</p>
